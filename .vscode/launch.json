{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with ts-node",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/game/demo.ts",  // Your entry point
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],  // Ensure this is correct
    }
  ]
}